{"files": [{"path": "index.html", "content": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n  <meta charset=\"UTF-8\" />\n  <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\" />\n  <title>Bollywood Dumb Charades Deck</title>\n  <style>\n    * { box-sizing: border-box; }\n    body {\n      margin: 0;\n      font-family: system-ui, -apple-system, BlinkMacSystemFont, \"Segoe UI\", sans-serif;\n      background: radial-gradient(circle at 20% 20%, #ffe7c7, #ffe0f5 50%, #f2f7ff 100%);\n      color: #222;\n      display: flex;\n      justify-content: center;\n      align-items: center;\n      min-height: 100vh;\n      padding: 20px;\n    }\n    .app {\n      width: min(800px, 100%);\n      background: #fff;\n      border-radius: 18px;\n      box-shadow: 0 20px 60px rgba(0,0,0,0.12);\n      padding: 24px;\n      display: grid;\n      gap: 18px;\n    }\n    h1 {\n      margin: 0;\n      font-size: 28px;\n      letter-spacing: -0.5px;\n    }\n    .controls {\n      display: flex;\n      flex-wrap: wrap;\n      gap: 12px;\n      align-items: center;\n    }\n    button {\n      border: none;\n      border-radius: 12px;\n      padding: 12px 16px;\n      font-size: 16px;\n      font-weight: 600;\n      cursor: pointer;\n      transition: transform 0.08s ease, box-shadow 0.08s ease;\n    }\n    button:active {\n      transform: translateY(1px);\n      box-shadow: none;\n    }\n    #drawBtn {\n      background: linear-gradient(135deg, #ff8a00, #f44336);\n      color: white;\n      box-shadow: 0 12px 24px rgba(244, 67, 54, 0.25);\n    }\n    #resetBtn {\n      background: #f1f3f5;\n      color: #333;\n      box-shadow: 0 8px 18px rgba(0,0,0,0.08);\n    }\n    .card {\n      border: 2px dashed #f44336;\n      border-radius: 16px;\n      padding: 24px;\n      min-height: 120px;\n      display: flex;\n      align-items: center;\n      justify-content: center;\n      background: #fff8f3;\n      text-align: center;\n    }\n    .card span {\n      font-size: 26px;\n      font-weight: 700;\n      color: #c62828;\n    }\n    .pile {\n      display: grid;\n      gap: 10px;\n      max-height: 240px;\n      overflow: auto;\n      padding: 10px;\n      border: 1px solid #ececec;\n      border-radius: 10px;\n      background: #fafafa;\n    }\n    .pile h3 {\n      margin: 0;\n      font-size: 16px;\n      color: #666;\n      font-weight: 700;\n    }\n    .pill {\n      display: inline-block;\n      background: #fff;\n      border: 1px solid #eee;\n      color: #444;\n      padding: 8px 10px;\n      border-radius: 10px;\n      box-shadow: 0 6px 14px rgba(0,0,0,0.05);\n    }\n    .row { display: grid; gap: 12px; }\n    .row.two { grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); }\n    .status { color: #777; font-size: 14px; }\n  </style>\n</head>\n<body>\n  <div class=\"app\">\n    <div class=\"row\">\n      <h1>Bollywood Dumb Charades Deck</h1>\n      <div class=\"status\" id=\"status\">Remaining: 0</div>\n      <div class=\"controls\">\n        <button id=\"drawBtn\">Draw a Card</button>\n        <button id=\"resetBtn\">Reset Deck</button>\n      </div>\n    </div>\n    <div class=\"card\" id=\"card\">\n      <span>Click \"Draw a Card\" to start!</span>\n    </div>\n    <div class=\"row two\">\n      <div class=\"pile\">\n        <h3>Drawn Cards</h3>\n        <div id=\"drawnList\"></div>\n      </div>\n      <div class=\"pile\">\n        <h3>Remaining Cards (peek)</h3>\n        <div id=\"remainingList\"></div>\n      </div>\n    </div>\n  </div>\n\n  <script>\n    const allMovies = [\n      \"3 Idiots\",\n      \"Dangal\",\n      \"Lagaan\",\n      \"Dilwale Dulhania Le Jayenge\",\n      \"Kabhi Khushi Kabhie Gham\",\n      \"Zindagi Na Milegi Dobara\",\n      \"Andaz Apna Apna\",\n      \"Gully Boy\",\n      \"Barfi!\",\n      \"Queen\",\n      \"PK\",\n      \"Taare Zameen Par\",\n      \"Swades\",\n      \"Jab We Met\",\n      \"Chak De! India\",\n      \"Munna Bhai M.B.B.S.\",\n      \"Sanju\",\n      \"Wake Up Sid\",\n      \"Rockstar\",\n      \"Yeh Jawaani Hai Deewani\",\n      \"Bajirao Mastani\",\n      \"Padmaavat\",\n      \"Dil Chahta Hai\",\n      \"Kaho Naa... Pyaar Hai\",\n      \"Hum Aapke Hain Koun..!\",\n      \"Hum Saath-Saath Hain\",\n      \"Kabir Singh\",\n      \"Haider\",\n      \"Omkara\",\n      \"Devdas\",\n      \"Kal Ho Naa Ho\",\n      \"Guru\",\n      \"Tanhaji\",\n      \"Drishyam\",\n      \"Stree\",\n      \"Article 15\",\n      \"Piku\",\n      \"Kahaani\",\n      \"Badhaai Ho\",\n      \"Pink\",\n      \"Udaan\",\n      \"Masaan\",\n      \"Lootera\",\n      \"Bhool Bhulaiyaa\",\n      \"Hera Pheri\",\n      \"Chupke Chupke\",\n      \"Gol Maal (1979)\",\n      \"Koi... Mil Gaya\",\n      \"Krrish\",\n      \"Dhoom\",\n      \"Dhoom 2\",\n      \"Dhoom 3\",\n      \"Kabhi Alvida Naa Kehna\",\n      \"Student of the Year\",\n      \"Chennai Express\",\n      \"Raazi\",\n      \"URI: The Surgical Strike\",\n      \"Barfi!\",\n      \"Don (2006)\",\n      \"Don 2\",\n      \"War\",\n      \"Pathaan\",\n      \"Jawan\",\n      \"Gadar: Ek Prem Katha\",\n      \"Gadar 2\",\n      \"Koi Mere Dil Se Pooche\",\n      \"Veer-Zaara\",\n      \"Rang De Basanti\",\n      \"Oye Lucky! Lucky Oye!\",\n      \"Special 26\",\n      \"A Wednesday!\",\n      \"Holiday\",\n      \"Bhool Bhulaiyaa 2\",\n      \"Andhadhun\",\n      \"The Lunchbox\",\n      \"Neerja\",\n      \"Talvar\",\n      \"Airlift\",\n      \"Parineeta\",\n      \"R... Rajkumar\",\n      \"Kaminey\",\n      \"Barfi!\",\n      \"Tanu Weds Manu\",\n      \"Tanu Weds Manu Returns\",\n      \"Raanjhanaa\",\n      \"Bhaag Milkha Bhaag\",\n      \"MS Dhoni: The Untold Story\",\n      \"Chhichhore\",\n      \"Kai Po Che!\",\n      \"Super 30\",\n      \"Bajrangi Bhaijaan\",\n      \"Sultan\",\n      \"Ek Tha Tiger\",\n      \"Tiger Zinda Hai\",\n      \"Band Baaja Baaraat\",\n      \"Rab Ne Bana Di Jodi\",\n      \"Hum Dil De Chuke Sanam\",\n      \"Saathiya\",\n      \"Tamasha\",\n      \"Rock On!!\",\n      \"Kabhi Haan Kabhi Naa\",\n      \"Dil To Pagal Hai\",\n      \"Mohabbatein\",\n      \"Veer-Zaara\",\n      \"Fan\",\n      \"Zero\",\n      \"Phir Hera Pheri\",\n      \"Welcome\",\n      \"Welcome Back\",\n      \"Dhamaal\",\n      \"Total Dhamaal\"\n    ];\n\n    let deck = [];\n    let drawn = [];\n\n    const cardEl = document.getElementById('card');\n    const statusEl = document.getElementById('status');\n    const drawnListEl = document.getElementById('drawnList');\n    const remainingListEl = document.getElementById('remainingList');\n    const drawBtn = document.getElementById('drawBtn');\n    const resetBtn = document.getElementById('resetBtn');\n\n    function shuffle(array) {\n      for (let i = array.length - 1; i > 0; i--) {\n        const j = Math.floor(Math.random() * (i + 1));\n        [array[i], array[j]] = [array[j], array[i]];\n      }\n      return array;\n    }\n\n    function updateUI() {\n      statusEl.textContent = `Remaining: ${deck.length}`;\n\n      drawnListEl.innerHTML = drawn.length\n        ? drawn.map((m, idx) => `<div class=\"pill\">${drawn.length - idx}. ${m}</div>`).join('')\n        : '<div class=\"status\">No cards drawn yet.</div>';\n\n      remainingListEl.innerHTML = deck.length\n        ? deck.map((m, idx) => `<div class=\"pill\">${idx + 1}. ${m}</div>`).join('')\n        : '<div class=\"status\">No cards remaining.</div>';\n    }\n\n    function drawCard() {\n      if (!deck.length) {\n        cardEl.innerHTML = '<span>Deck is empty. Reset to play again!</span>';\n        return;\n      }\n      const card = deck.pop();\n      drawn.unshift(card);\n      cardEl.innerHTML = `<span>${card}</span>`;\n      updateUI();\n    }\n\n    function resetDeck() {\n      deck = shuffle([...allMovies]);\n      drawn = [];\n      cardEl.innerHTML = '<span>Deck shuffled. Ready to play!</span>';\n      updateUI();\n    }\n\n    drawBtn.addEventListener('click', drawCard);\n    resetBtn.addEventListener('click', resetDeck);\n\n    // initialize\n    resetDeck();\n  </script>\n</body>\n</html>\n"}]}